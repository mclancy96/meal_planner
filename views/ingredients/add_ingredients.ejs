<%- include('../partials/header', {pageTitle: "Add Ingredient"}) %>
<h2 class="text-center">Add a New Ingredient</h2>
<div class="container">
  <form action="/ingredients/create" method="POST">
    <div class="form-group">
      <label for="addIngredientName">New Ingredient Name</label>
      <input
        type="text"
        class="form-control"
        id="addIngredientName"
        name="name"
        placeholder="Enter New Ingredient Name"
        required
      />
    </div>
    <div class="form-group">
      <label for="addAddress">Street Address</label>
      <input
        type="text"
        class="form-control"
        id="addAddress"
        name="street_address"
        placeholder="Enter Street Address"
        required
      />
    </div>
    <div class="form-group">
      <label for="addCity">City</label>
      <input
        type="text"
        class="form-control"
        id="addCity"
        placeholder="Enter City"
        name="city"
        required
      />
    </div>
    <div class="form-group">
      <label for="addState">State</label>
      <input
        type="text"
        class="form-control"
        id="addState"
        name="state"
        placeholder="Enter State"
        aria-describedby="stateHelp"
        required
      />
      <small id="stateHelp" class="form-text text-muted"
        >Abbreviation not full state. Example: <i>NJ</i></small
      >
    </div>
    <div class="form-group">
      <label for="addZipCode">Zip Code</label>
      <input
        type="number"
        class="form-control"
        id="addZipCode"
        name="zip_code"
        placeholder="Enter Zip Code"
        required
      />
    </div>
    <div class="form-group">
      <label for="addEmail">Email</label>
      <input
        type="email"
        class="form-control"
        id="addEmail"
        name="email"
        placeholder="Enter Email"
        required
      />
    </div>
    <div class="form-group">
      <label for="editPhone">Phone</label>
      <input
        type="text"
        class="form-control"
        id="editPhone"
        name="phone_number"
        placeholder="Enter Phone Number"
        aria-describedby="phoneHelp"
        required
      />
      <small id="phoneHelp" class="form-text text-muted"
        >Example: <i>123-456-7890</i></small
      >
    </div>
    <div class="text-center m-3">
      <button type="submit" class="btn btn-primary">Create Ingredient</button>
    </div>
  </form>
</div>
<%- include('../partials/footer') %>
